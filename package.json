{
  "name": "furs-client-ts",
  "version": "2.0.2",
  "description": "Professional TypeScript client for FURS (Slovenian Financial Administration) invoice fiscalization and business premise registration with full type safety and IntelliSense support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "npm run build && node dist/examples/basic-usage.js",
    "test": "npm run test:ts",
    "test:js": "npm run build && node integration-test.js",
    "test:unit": "npm run build && node test-package.js",
    "test:ts": "npm run build && node dist/test/test-runner.js",
    "test:ts:unit": "npm run build && node dist/test/unit.test.js",
    "test:ts:integration": "npm run build && node dist/test/integration.test.js",
    "example": "npm run build && node dist/examples/basic-usage.js",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "furs",
    "slovenia",
    "fiscalization",
    "invoice",
    "tax",
    "e-invoice",
    "business-premise",
    "typescript",
    "slovenian-financial-administration",
    "davek",
    "racun",
    "sdk",
    "client-library",
    "type-safe",
    "intellisense"
  ],
  "author": "nejcar20 <contact@github.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nejcar20/furs-client-ts.git"
  },
  "bugs": {
    "url": "https://github.com/nejcar20/furs-client-ts/issues"
  },
  "homepage": "https://github.com/nejcar20/furs-client-ts#readme",
  "dependencies": {
    "bwip-js": "^4.7.0",
    "canvas": "^3.2.0",
    "jsbarcode": "^3.12.1",
    "node-forge": "^1.3.1",
    "qrcode": "^1.5.4"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/node-forge": "^1.3.0",
    "@types/qrcode": "^1.5.5",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "jest": "^29.0.0",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "publishConfig": {
    "access": "public"
  }
}
